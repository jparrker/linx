<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<h1>All Golf courses</h1>
<div>
    <a href="/golfcourses/new">Add Golf course</a>
</div>


  <% for (let c of golfcourses) {%>
    <div class="card mb-3" >
      <div class="row">
        <div class="col-md-4">
          <% if(c.image.length) { %>
            <img class='img-fluid' src="<%=c.image[0].url%>">
            <% } else {%>
              <img class='img-fluid' src="https://res.cloudinary.com/dbfcoacql/image/upload/v1671552677/linx/default_myh9om.jpg" alt="">
              
              <% } %> 
          
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">
              <%=c.title %>
            </h5>
            <p class="card-text"><%=c.description %></p>
            <p class="card-text" >
              <small class="text-muted"><%=c.location%></small>
            </p>
            <a class='btn btn-primary'href="/golfcourses/<%=c._id%>">View</a>
          </div>
        </div>
      </div>
    </div>
  <% }%>
  <script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
    const golfcourses = {features: <%- JSON.stringify(golfcourses) %>}
   
</script>
  <script src="/javascript/cluster.js"></script>